{
  "name": "boilerplate-graphql-prisma-typescript",
  "version": "0.0.1",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/index",
    "start": "cross-env NODE_ENV=production node dist",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn generate && tsc",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "npx prisma introspect && npx prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema/index"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-beta.4",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "graphql-yoga": "^1.18.3",
    "nexus": "^0.21.0",
    "nexus-prisma": "^0.13.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.4",
    "@types/node": "^13.13.5",
    "@types/ws": "^7.2.4",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=13.3.0"
  }
}
